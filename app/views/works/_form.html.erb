<%= form_for @work, :html => {:class => "navbar-form navbar-left"} do |f| %>

	<div class="form-group">
		<%= f.hidden_field :courseid %>

		<div class="input-group">
			Name:
			<%= f.text_field :name, :class => "form-control" %>
		</div>
		<br />
		<div class="input-group">
			Type:
			<br /><%= select("work", "thetype", %w[Test Quiz Exam Assignment Lab], {}, :class => "form-control") %>
		</div>
		<br />
		<div class="input-group">
			<%= f.submit "Submit", :class => "btn btn-default" %>
		</div>
	</div>

<% end %>