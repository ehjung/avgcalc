<div style="float: left; height: 100%;">
	<h1>All Courses</h1>
</div>
<div style="float: right; height: 100%;">
	<a href="<%= new_course_path %>" class="btn btn-default btn-lg">
	  <span class="glyphicon glyphicon-plus"></span> 
	</a>
</div>
<div style="clear: both"></div>


<div class="well">
	Overall Average: <%= @overall_average %>
</div>

<% @courses.each do |course| %>
	<div class="panel panel-primary">
	  <div class="panel-heading">
	    <h3 class="panel-title">
	    	<div style="float: left; height: 100%;"><%= course.name %></div>
	    	<div style="float: right; height: 100%;">Average: <%= course.average %></div>
	    	<div style="clear: both"></div>
	    </h3>
	  </div>
	  <div class="panel-body">
	    <div class="btn-group">
			<%= link_to 'Edit', edit_course_path(:id => course.id), :class => "btn btn-default" %>
			<%= link_to 'Delete', course, method: :delete, :class => "btn btn-default" %>
			<%= link_to 'Manage Works', works_path(:courseid => course.id), :class => "btn btn-default" %>
		</div>
	  </div>
	</div>

<% end %>

